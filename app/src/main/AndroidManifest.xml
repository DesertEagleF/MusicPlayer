<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.deserteaglefe.ninthweek"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity"/>
        <activity android:name=".activity.MusicListActivity"/>
        <receiver android:name=".widget.MusicWidget"
                  android:process="com.deserteaglefe.service">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@layout/widget_settings"/>
        </receiver>
        <service
            android:name=".service.MusicService"
            android:enabled="true"
            android:process="com.deserteaglefe.service"/>
    </application>

</manifest>