<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/remote_album"
        android:layout_width="64dp"
        android:layout_height="64dp"/>

    <TextView
        android:id="@+id/remote_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:lines="1"
        android:maxLines="1"
        android:textSize="12sp"
        android:layout_marginStart="@dimen/remote_margin"
        android:layout_toEndOf="@id/remote_album"/>

    <TextView
        android:id="@+id/remote_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/grey"
        android:lines="1"
        android:maxLines="1"
        android:textSize="12sp"
        android:layout_below="@id/remote_name"
        android:layout_marginStart="@dimen/remote_margin"
        android:layout_toEndOf="@id/remote_album"/>

    <ImageView
        android:id="@+id/remote_prev"
        android:layout_width="@dimen/remote_button_size"
        android:layout_height="@dimen/remote_button_size"
        android:layout_below="@id/remote_info"
        android:layout_marginStart="@dimen/remote_margin"
        android:layout_toEndOf="@id/remote_album"/>

    <ImageView
        android:id="@+id/remote_play"
        android:layout_width="@dimen/remote_button_size"
        android:layout_height="@dimen/remote_button_size"
        android:layout_below="@id/remote_info"
        android:layout_marginStart="@dimen/remote_margin"
        android:layout_toEndOf="@id/remote_prev"/>

    <ImageView
        android:id="@+id/remote_next"
        android:layout_width="@dimen/remote_button_size"
        android:layout_height="@dimen/remote_button_size"
        android:layout_below="@id/remote_info"
        android:layout_marginStart="@dimen/remote_margin"
        android:layout_toEndOf="@id/remote_play"/>
</RelativeLayout>