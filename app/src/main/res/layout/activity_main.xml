<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.MainActivity"
    android:background="@color/grey">

    <ImageView
        android:id="@+id/disk_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/placeholder_disk_play_program"
        android:layout_marginTop="64dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/cover"
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:layout_marginTop="104dp"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:layout_marginTop="104dp"
        android:src="@drawable/play_disc_halo"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/play_disc"
        android:src="@drawable/play_disc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/play_needle_image"
        android:layout_alignRight="@id/play_disc"
        android:layout_alignEnd="@id/play_disc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/play_needle"
        android:layout_marginRight="55dp"
        android:layout_marginEnd="55dp"
        android:layout_marginTop="-16dp"/>

    <ImageView
        android:id="@+id/play_button"
        android:layout_width="@dimen/play_button_size"
        android:layout_height="@dimen/play_button_size"
        android:src="@drawable/desk_play"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/previous_button"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/button_size"
        android:src="@drawable/desk_pre"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/play_button"
        android:layout_toStartOf="@id/play_button"
        android:layout_marginRight="@dimen/button_horizon_margin"
        android:layout_marginEnd="@dimen/button_horizon_margin"
        android:layout_marginBottom="@dimen/button_margin"/>

    <ImageView
        android:id="@+id/next_button"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/button_size"
        android:src="@drawable/desk_next"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/play_button"
        android:layout_toEndOf="@id/play_button"
        android:layout_marginLeft="@dimen/button_horizon_margin"
        android:layout_marginStart="@dimen/button_horizon_margin"
        android:layout_marginBottom="@dimen/button_margin"/>

    <ImageView
        android:id="@+id/love_it"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/play_icn_love"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/previous_button"
        android:layout_toStartOf="@id/previous_button"
        android:layout_marginRight="@dimen/button_horizon_margin"
        android:layout_marginEnd="@dimen/button_horizon_margin"
        android:layout_marginBottom="@dimen/button_margin"/>

    <ImageView
        android:id="@+id/play_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/play_icn_src"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/next_button"
        android:layout_toEndOf="@id/next_button"
        android:layout_marginLeft="@dimen/button_horizon_margin"
        android:layout_marginStart="@dimen/button_horizon_margin"
        android:layout_marginBottom="@dimen/button_margin"/>

    <SeekBar
        android:max="500"
        android:progress="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seek_bar"
        android:layout_above="@+id/play_button"/>

</RelativeLayout>
